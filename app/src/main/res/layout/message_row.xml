<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="@dimen/common_margin_small"
    android:paddingLeft="@dimen/common_margin_small"
    android:paddingRight="@dimen/common_margin_small"
    android:paddingTop="@dimen/common_margin_small">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/common_block_huge"
        android:layout_height="@dimen/common_block_huge"
        android:layout_alignParentLeft="true"
        android:src="@drawable/twitter_512" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_check"
        android:layout_toRightOf="@+id/iv_icon"
        android:maxLines="2" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/common_block_medium"
        android:layout_height="@dimen/common_block_medium"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/checked"
        android:visibility="invisible" />

</RelativeLayout>