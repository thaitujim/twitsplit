<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_margin_small"
    android:paddingLeft="@dimen/common_margin_small"
    android:paddingRight="@dimen/common_margin_small"
    android:paddingTop="@dimen/common_margin_small">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_alignParentLeft="true"
        android:src="@drawable/twitter_512"
        android:layout_width="@dimen/common_block_huge"
        android:layout_height="@dimen/common_block_huge" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_icon"
        android:id="@+id/tv_message"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />



</RelativeLayout>