<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/common_textsize_huge"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_huge"
        android:text="@string/main_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/common_margin_small"
        android:layout_marginLeft="@dimen/common_margin_small"
        android:layout_marginRight="@dimen/common_margin_small"
        android:layout_marginStart="@dimen/common_margin_small"
        android:layout_marginTop="@dimen/common_margin_huge"
        android:hint="@string/input_message_hint"
        android:gravity="bottom"
        android:text="@string/input_message_sample"
        app:layout_constraintBottom_toTopOf="@+id/btn_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <Button
        android:id="@+id/btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin_small"
        android:layout_marginEnd="@dimen/common_margin_small"
        android:layout_marginLeft="@dimen/common_margin_small"
        android:layout_marginRight="@dimen/common_margin_small"
        android:layout_marginStart="@dimen/common_margin_small"
        android:text="@string/main_button_post"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>